@import '/styles/me_common.wxss';

.classify-item{
    background-color:#fff;border-radius:20rpx;overflow:hidden;
    box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.16);
}
.classify-item:not(:first-child){margin-top:20rpx;}
.classify-item .itemp-top{
    padding:30rpx 30rpx 0;box-sizing:border-box;
}
.classify-item .goods-icon{width:40rpx;height:40rpx;margin-right:12rpx;}
.classify-item .class-title{font-size:32rpx;color:#333;font-weight:bold;}
.classify-item .even-more{
    font-size:24rpx;color:#fff;padding:2rpx 10rpx;
    background-color:#FE4F4F;border-radius:20rpx;
}


.goods-scroll{padding:0 30rpx;box-sizing:border-box;}
.goods-list{padding:30rpx 0;}
.goods-item{
    flex-shrink:0;box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.09);
    width:192rpx;border-radius:20rpx;overflow:hidden;
}
.goods-item:not(:first-child){margin-left:20rpx;}
.goods-img{
    width:184rpx;height:184rpx;background-color:#ccc;
}
.goods-item .name{
    font-size:24rpx;white-space:nowrap;overflow:hidden;
    text-overflow:ellipsis;width:100%;
}
.now-price{font-size:28rpx;color:#FF0000;font-weight:bold;}
.add-cart{
    background-color:#FE4F4F;color:#fff;padding:0rpx 10rpx;
    font-size:22rpx;border-radius:20rpx;
}