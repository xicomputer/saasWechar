/* pages/BusinessApplication/BusinessVideo/BusinessVideo.wxss */
.video-container{
  width: 100%;
  height: 100vh;
  vertical-align: top;
  position: relative;
}
.video-top{
  width: 100%;
  height: 180rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.video-bottom{
  width: 100%;
  background: rgba(0,0,0,0.3);
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  left: 0;
  padding: 20rpx 20rpx 40rpx;
  box-sizing: border-box;
}
.video-content{
  flex: 1;
}
.video-tile{
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 40rpx;
  color: #FFFFFF;
}
.video-text{
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 28rpx;
  color: #FFFFFF;
}
.video-btn{
  width: 116rpx;
  height: 44rpx;
  background: #E23E3E;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}